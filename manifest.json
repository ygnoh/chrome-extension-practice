{
    "manifest_version": 2,
    "name": "Hello world",
    "description": "This is my first extension",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "author": "yonggoo.noh@gmail.com"
}